link(rel="stylesheet" href="/css/common.css")

nav.navbar.navbar-default
    ul.nav.navbar-nav
        each path, name in {"Groups":'/group', "Channels":"/channel","Messages":"/"}
            li.dropdown.col-xs-4.text-center
                a.dropdown-toggle(data-toggle=".dropdown-menu")= name
                span.caret
                    ul.dropdown-menu.col-xs-12.menu-group
                        if name == "Groups"
                            if groupList !== undefined
                                each listItem in groupList
                                    a(href=path + '/' + listItem).col-xs-12.list-group-item.list-group-hover.text-center= listItem
                        else if name == "Channels"
                            if channelList !== undefined
                                each listItem in channelList
                                    a(href='/group/' + listItem).col-xs-12.list-group-item.list-group-hover.text-center= listItem.split('/')[0] + " > " + listItem.split('/')[2]
                        else if name == "Messages"
                            if messageList !== undefined
                                each listItem in messageList
                                    a(href='/message').col-xs-12.list-group-item.list-group-hover.text-center= listItem
